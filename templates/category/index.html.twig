{% extends './admin/base.html.twig' %}

{% block title %}Administration des catégories!{% endblock %}

{% block body %}

<div class="container-fluid">
    <h1 class="my-5">Gestion des catégories</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th class="text-center">Prestations</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            {% for category in pagination.data %}
            <tr>
                <td>{{category.id}}</td>
                <td>{{category.title}}</td>
                <td>
                    {{category.description | raw}}
                </td>
                <td class="text-center">
                    <span class="badge badge-primary rounded">{{category.ads | length}}</span>
                </td>
                <td>
                <a href="{{ path('category_edit', {'slug': category.slug}) }}" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                    <a href="{{ path('category_delete', {'slug': category.slug}) }}" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    {{ pagination.display() }}
</div>

{% endblock %}
