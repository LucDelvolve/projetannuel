{% extends 'presta/base.html.twig' %}

{% block title %}Modification du mot de passe{% endblock %}

{% block body %}
     <div class="container clearfix">
        <h1 class="my-5">Modification du mot de passe</h1>

        {{ form_start(form) }}

      
         <div class="alert alert-light">
            <h2 class="alert-heading">Mot de passe</h2>
            <hr>
            <div class="md-form ">
                {{ form_widget(form.oldPassword) }}
            </div>
            <div class="md-form ">
                {{ form_label(form.newPassword) }}

                {{ form_widget(form.newPassword,{'id': 'password'}) }}
            </div>
                {# diff#}
            <div class="md-form ">
                {{ form_label(form.confirmPassword) }}

                {{ form_widget(form.confirmPassword,{'id': 'password-custom'}) }}
            </div>
        </div>
        <button type="submit" class="btn btn-primary float-right">
            <i class="fas fa-check"></i>
            Modifier le mot de passe
        </button>
        {{ form_end(form) }}

    </div>
{% endblock %}

{% block javascripts %}

<script src="{{ asset('build/js/password.js') }}"></script>

{% endblock %}